<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cálculo de Salário"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="10dp" />

        <!-- Nome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do funcionário:" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o nome" />

        <!-- Salário base -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salário base:" />

        <EditText
            android:id="@+id/editSalarioBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 2000"
            android:inputType="numberDecimal" />

        <!-- Tipo de funcionário -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de funcionário:"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Campo extra: Bônus (Gerente) -->
        <TextView
            android:id="@+id/textBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bônus:"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editBonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 500"
            android:inputType="numberDecimal"
            android:visibility="gone" />

        <!-- Campo extra: Horas extras (Desenvolvedor) -->
        <TextView
            android:id="@+id/textHoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horas extras:"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 10"
            android:inputType="number"
            android:visibility="gone" />

        <!-- Botão calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular salário"
            android:layout_marginTop="20dp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/textResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:text="Resultado aparecerá aqui..." />

    </LinearLayout>
</ScrollView>
