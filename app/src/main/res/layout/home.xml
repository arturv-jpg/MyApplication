<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E3F2FD"
    android:padding="20dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/img1"
        android:layout_marginBottom="20dp"
        android:contentDescription="Imagem motivacional" />

    <TextView
        android:id="@+id/txtFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique no botÃ£o para ver uma frase!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar Frase"
        android:padding="12dp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnVoltarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar ao Menu"
        android:padding="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
